# Environment variables for Live Transcription app
# Copy this file to .env and fill in your API keys

# ==============================================================================
# DEEPGRAM CONFIGURATION (Optional - for cloud transcription)
# ==============================================================================
# Get your API key from https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here
DEEPGRAM_TIME_LIMIT=3600
DEEPGRAM_MODEL=nova-3
DEEPGRAM_LANGUAGE=en-US
DEEPGRAM_TRANSCRIPT_ONLY=true

# ==============================================================================
# GROQ API CONFIGURATION (Optional - for Groq cloud transcription)
# ==============================================================================
# Get your API key from https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here_or_leave_empty

# ==============================================================================
# PRIMARY TRANSCRIPTION MODEL (faster_whisper with Ivrit CT2)
# ==============================================================================
# Available models:
# - ivrit-ct2: Hebrew-optimized model (best for Hebrew)
# - ivrit-v3-turbo: Alias for ivrit-ct2
# - whisper-v3-turbo: General multilingual model
# - tiny, base, small, medium, large: OpenAI Whisper models (if available)
# - deepgram: Use Deepgram API (requires DEEPGRAM_API_KEY)
WHISPER_MODEL=ivrit-ct2

# Ivrit CT2 model configuration
IVRIT_MODEL_NAME=ivrit-ai/whisper-large-v3-turbo-ct2
IVRIT_DEVICE=cuda
IVRIT_COMPUTE_TYPE=float16
IVRIT_BEAM_SIZE=5

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
PORT=8009
AUDIO_CACHE_ENABLED=true

# ==============================================================================
# HUGGING FACE TOKEN (Required for speaker diarization with pyannote)
# ==============================================================================
# Get your token from https://huggingface.co/settings/tokens
# Required for speaker diarization features
HF_TOKEN=your_huggingface_token_here

# Alternative name for compatibility (some parts of code might use this)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# ==============================================================================
# YOUTUBE DOWNLOAD SETTINGS
# ==============================================================================
# Chunking settings for long YouTube videos
YTDLP_CHUNK_SECONDS=5
YTDLP_CHUNK_OVERLAP=1

# ==============================================================================
# PARALLEL TRANSCRIPTION (Experimental)
# ==============================================================================
USE_PARALLEL_TRANSCRIPTION=false
PARALLEL_WORKERS=2

# ==============================================================================
# CUDA/GPU CONFIGURATION
# ==============================================================================
# Which GPU to use (0 = first GPU, 1 = second GPU, etc.)
CUDA_VISIBLE_DEVICES=0
# Docker-specific GPU visibility
NVIDIA_VISIBLE_DEVICES=all

# ==============================================================================
# OPTIONAL: Override device settings (uncomment to manually set)
# ==============================================================================
# DEVICE=cuda  # or cpu - leave commented to auto-detect based on CUDA availability
# COMPUTE_TYPE=float16  # or int8 for CPU - leave commented for auto-configuration

# ==============================================================================
# OPENAI API CONFIGURATION (for translation feature)
# ==============================================================================
# Get your API key from https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1